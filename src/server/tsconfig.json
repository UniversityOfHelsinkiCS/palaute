{
  "compilerOptions": {
    "module": "commonjs",
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["node"],
    "resolveJsonModule": true,
    "paths": {
      "@common/*": ["../common/*"]
    }
  },
  "include": ["./"],
  "extends": "../../tsconfig.json",
  "composite": true,
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "experimentalResolver": true,
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
